{
  "name": "door-knob",
  "version": "0.1.0",
  "description": "A UI library based on Vue + Web Components, trying to support all frameworks.",
  "author": "Ukonn Ra <ukonnra@outlook.com>",
  "type": "module",
  "packageManager": "yarn@4.2.2",
  "engines": {
    "node": "^20",
    "yarn": ">= 4.2.2"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "upgrade": "yarn upgrade-interactive",
    "lint": "yarn lint:tsc && yarn lint:prettier --check && yarn lint:eslint",
    "lint:tsc": "yarn workspaces foreach --from '{examples,packages}/*' -Rpitv run lint:tsc",
    "lint:eslint": "eslint '**/*.{vue,ts,tsx,js}'",
    "lint:prettier": "prettier '**/*.{vue,ts,tsx,js,json}'",
    "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix",
    "build": "yarn workspaces foreach --from '{examples,packages}/*' -Rpitv run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.0.3",
    "@eslint/js": "^9.4.0",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.8.1",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.4.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.4",
    "sass-loader": "^14.2.1",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "~5.4.5",
    "typescript-eslint": "^7.12.0",
    "vite": "^5.2.13",
    "vitest": "^1.6.0",
    "vue": "^3.4.27",
    "vue-tsc": "^2.0.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
